{
  "name": "pybet",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "cd frontend && vite build",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "cd frontend && eslint . --fix",
    "format": "python3 scripts/format-cli.py js ts vue json html css py",
    "format:check": "python3 scripts/format-cli.py js ts vue json html css py --check",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e:coverage": "playwright test --coverage",
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend/server && python manage.py runserver",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "npm install && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "migrate": "cd backend/server && python manage.py migrate"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.1",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@primevue/themes": "^4.2.2",
    "autoprefixer": "^10.4.20",
    "pinia": "^2.2.6",
    "primeicons": "^7.0.0",
    "primevue": "^4.2.2",
    "tailwindcss": "^3.4.16",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.14.0",
    "eslint-plugin-playwright": "^2.0.0",
    "eslint-plugin-vue": "^9.30.0",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.4.2",
    "typescript": "~5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-vue-devtools": "^7.5.4",
    "vitest": "^0.34.0",
    "vue-tsc": "^2.1.10"
  }
}
